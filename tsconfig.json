{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "types": [
      "uikit",
      "node",
      "next",
      "jest",      
      "marked"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true, 
    "isolatedModules": true,
  },
  "typeRoots": [
    "node_modules/@types",
    "@types",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/components/dashboard/panels/addCourse/AddCourse.tsx",
  ],
  "rules": {
    "@typescript-eslint/member-naming": [
      "error",
      {
        "private": "^__",
        "protected": "^_"
      },
    ],
  },
  "include": [
    "next-env.d.ts",
    "index.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
